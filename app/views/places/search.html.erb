<div class="container">
<div class="row">

<% @places.each do |place| %>
<div class="col-md-4">



<div class="card promoting-card">

<!-- Card content -->
<div class="card-body d-flex flex-row">

<!-- Avatar -->

<% if place.avatar.attached? %>
<%= image_tag place.avatar.variant(resize_to_limit: [50, 50]), class: "rounded-circle mr-3" %>

 <% end %>
 

<!-- Content -->
<div>

<!-- Title -->
<h4 class="card-title font-weight-bold mb-2"><%= link_to place.name, place_path(place) %></h4>
<!-- Subtitle -->
<p class="card-text"><i class="far fa-clock pr-2"></i><%= place.address %></p>

</div>

</div>

<!-- Card image -->
<div class="view overlay">
  <% if place.photos.attached? %>
<%= image_tag place.photos.first, class: "card-img-top" %>
<% end %>

<%= link_to place_path(place) do %>
<div class="mask rgba-white-slight"></div>
<% end %>
</div>





<!-- Card content -->
<div class="card-body">
</div>
</div>
</div>
<% end %>
</div>
</div>