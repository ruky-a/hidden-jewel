

<section class="ad-post bg-gray py-5">
    <div class="container">
        <h2 class="text-center">Add Details of your business</h2>
        <%= bootstrap_form_for @place do |f| %>
        <!-- Post Your ad start -->
        <fieldset class="border border-gary p-4 mb-5">
            <div class="row">
                <div class="col-lg-12">

                </div>
                <div class="col-lg-6">
                    <h6 class="font-weight-bold pt-4 pb-1"></h6>
                    <%= f.text_field :name, class: "border w-100 p-2 bg-white text-capitalize" %>
                    <%= f.text_area :description, placeholder: "Write details of your place",  class: "border p-3 w-100 bg-white" %>

                    <%= f.text_field :address, class: "border w-100 p-2 bg-white text-capitalize" %>

                    <div class="row px-3">
                        <div class="col-lg-6 mr-lg-6 rounded bg-white my-2 ">
                            <%= f.text_field :state, class: "py-2" %>
                        </div>
                        <div class="col-lg-6 mr-lg-6 rounded bg-white my-2">
                            <%= f.text_field :city, class: "py-2" %>
                        </div>
                        <div class="col-lg-6 mr-lg-6 rounded bg-white my-2">
                            <%= f.text_field :zipcode, class: "py-2" %>
                        </div>
                        <div class="col-lg-6 mr-lg-6 rounded bg-white my-2">
                              <%= f.select(:category_id, options_for_select(@categories.map{ |c| [c.name, c.id] }, selected: @place.category_id)) %>
                            
                            
                        </div>

                        

                    </div>
                    <h6 class="font-weight-bold pt-4 pb-1"></h6>

                </div>
                <div class="col-lg-6">

                    <div class="price">


                    </div>
                    <div class="choose-file text-center my-4 py-4 rounded">
                        <label for="file-upload">
                            <span class="d-block font-weight-bold text-dark">Drop files anywhere to upload</span>
                            <span class="d-block">or</span>
                            <span class="d-block btn bg-danger text-white my-3 select-files">Select files</span>
                            <span class="d-block">Maximum upload file size: 500 KB</span>
                            <input type="file" class="form-control-file d-none" id="file-upload" name="file">
                        </label>
                    </div>
                    <div class="row px-3">
                        <div class="col-lg-6 mr-lg-6 rounded bg-white my-2 ">
                            <%= f.file_field :avatar, placeholder: "Upload Logo", class: "form-control-file" %>
                        </div>
                        <div class="col-lg-6 mr-lg-6 rounded bg-white my-2">
                            <%= f.file_field :photos, multiple: true, placeholder: "Upload Photos" %>
                        </div>

                         <div class="col-lg-6">
                            <%= f.text_field :video, placeholder: "Youtube url e.g. Zc9mIDtJ3m8",autocomplete: "video url", class: "input" %>
                        </div>

                          <div class="col-lg-6">
                            <%= f.url_field :url, placeholder: "https://www.yourwebsite.com",autocomplete: "video url", class: "input" %>
                        </div>
                       
                    </div>

                </div>



            </div>
        </fieldset>
        <!-- Post Your ad end -->

        <!-- seller-information start -->
        <fieldset class="border p-4 my-5 seller-information bg-gray">
            <div class="row">
                <div class="col-lg-12">
                    <h3>Contact Information</h3>
                </div>
                <div class="col-lg-6">
                    <h6 class="font-weight-bold pt-4 pb-1"><%= f.email_field :email, placeholder: "name@yourbusinessemail.com", class: "border w-100 p-2" %></h6>

                     
                </div>
                <div class="col-lg-6">
                   <h6 class="font-weight-bold pt-4 pb-1"><%= f.phone_field :phone, class: "border w-100 p-2" %></h6>

                </div>
            </div>
        </fieldset>





        <%= f.submit "Submit", data: { disable_with: false, confirm: "Are you sure?" },class: 'btn btn-primary text-center' %>
        <% end %>
    </div>
</section>