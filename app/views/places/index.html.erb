
<section class="page-search">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <!-- Advance Search -->
        <div class="advance-search">
            <div class="container">
              <div class="row justify-content-center">
                <div class="col-lg-12 col-md-12 align-content-center">
              
                  <%= form_tag search_places_path, method: :get do |f| %>
                      <div class="form-row">
                        <div class="form-group col-md-4">
                          <%= text_field_tag :search, nil, placeholder: "Restaurants, Fitness, etc.", class: "form-control my-2 my-lg-1" %>
                         
                        </div>
                        <div class="form-group col-md-3">
                          <%= select_tag :category, options_for_select(Category.all.map{ |c| [c.name, c.id]}), class: "w-100 form-control mt-lg-1 mt-md-2" %>
                      
                        </div>
                        <div class="form-group col-md-3">
                          <%= text_field_tag :location, nil, placeholder: "tampa, newyork, etc.", class: "form-control my-2 my-lg-1" %>
                         
                        </div>
                        <div class="form-group col-md-2 align-self-center">
                          <%= submit_tag 'Search', class: 'btn btn-primary' %>
                       
                        </div>
                      </div>
               <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
<br /><br />

<div class="container">
  <h1 class="text-center">Hidden Jewel's of United States</h1>
<div class="row">

<% @places.each do |place| %>
<div class="col-md-4">



<div class="card promoting-card">

<!-- Card content -->
<div class="card-body d-flex flex-row">

<!-- Avatar -->

<% if place.avatar.attached? %>
<%= image_tag place.avatar.variant(resize_to_limit: [50, 50]), class: "rounded-circle mr-3" %>

 <% end %>
 

<!-- Content -->
<div>

<!-- Title -->
<h4 class="card-title font-weight-bold mb-2"><%= link_to place.name, place_path(place) %></h4>
<!-- Subtitle -->
<p class="card-text"><i class="far fa-clock pr-2"></i><%= place.address %>, <%= place.city %> <%= place.state %>, <%= place.zipcode %></p>

</div>

</div>

<!-- Card image -->
<div class="view overlay">
  <% if place.photos.attached? %>
<%= image_tag place.photos.first, class: "card-img-top" %>
<% end %>

<%= link_to place_path(place) do %>
<div class="mask rgba-white-slight"></div>
<% end %>
</div>





<!-- Card content -->
<div class="card-body">

<div class="collapse-content">
<%= place.description %>
<!-- Button -->


</div>
</div>
</div>
</div>
<% end %>
</div>
</div>
<br />




