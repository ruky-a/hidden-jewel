



<section class="section-sm">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="search-result bg-gray">
          <h1>Gems</h1>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <div class="category-sidebar">
          <div class="widget category-list">
            <h4 class="widget-header">All Categories</h4>
            <% @categories.each do |item| %>
            <ul class="category-list">

              <li><%= link_to "#{item.name}", search_path(category: item.id) %></li><hr />
           </ul>
            <% end %>
          </div>
 </div>
      </div>


      <div class="col-md-9">

        <div class="product-grid-list">

          <!-- product card -->
          <div class="product-item">
            <div class="row mt-30">

              <% @places.each do |place| %>
              <div class="col-sm-12 col-lg-4 col-md-6">


                <div class="card promoting-card">

                  <!-- Card content -->
                  <div class="card-body d-flex flex-row">

                    <!-- Avatar -->

                    <% if place.avatar.attached? %>
                    <%= image_tag place.avatar.variant(resize_to_limit: [50, 50]), class: "rounded-circle mr-3" %>

                    <% end %>


                    <!-- Content -->
                    <div>

                      <!-- Title -->
                      <h4 class="card-title font-weight-bold mb-2"><%= link_to place.name, place_path(place) %></h4>
                      <!-- Subtitle -->
                      <p class="card-text"><i><%= place.city%>, <%= place.state %></i></p>


                    </div>

                  </div>

                  <!-- Card image -->
                  <div class="view overlay">
                    <% if place.photos.attached? %>
                    <%= image_tag place.photos.first, class: "card-img-top", height: "180px" %>
                    <% end %>

                    <%= link_to place_path(place) do %>
                    <div class="mask rgba-white-slight"></div>
                    <% end %>
                  </div>

                  <div class="card-body"><li class="list-inline-item"><%= place.description %></a></li>
                  </div>
                  <div class="card-footer">
                    
                    <span class="float-right">
                      <a class="" data-toggle="tooltip" data-placement="top" title="Quick Look">
                        <%= link_to place_path(place) do %>
                        <i class="fas fa-eye"></i>
                        <% end %>
                      </a>
                      <a class="" data-toggle="tooltip" data-placement="top" title="Add to Wishlist">
                      </a>
                    </span>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
          </div>


        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>
</div>

</section>
